// Prisma schema for СТИЛКРАФТ website

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Статьи/Публикации
model Article {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  content     String   @db.Text // Markdown контент
  excerpt     String?  @db.Text
  coverImage  String?  // Путь к изображению
  metaTitle       String?
  metaDescription String?
  published   Boolean  @default(false)
  publishedAt DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  authorUsername String? // Telegram username автора

  @@index([slug])
  @@index([published])
  @@map("articles")
}

// Заявки с сайта
model ContactRequest {
  id          String   @id @default(cuid())
  name        String
  phone       String?
  email       String?
  message     String   @db.Text
  source      String   @default("website") // website, callback
  telegramSent Boolean @default(false)
  telegramMessageId String?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([createdAt])
  @@map("contact_requests")
}

// Галерея работ (для будущего расширения через Telegram bot)
model Gallery {
  id          String   @id @default(cuid())
  title       String
  description String?  @db.Text
  images      String[] // Массив путей к изображениям
  category    String?
  order       Int      @default(0)
  published   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([published])
  @@index([order])
  @@map("gallery")
}

